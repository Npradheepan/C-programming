using System;

namespace ConsoleApp20
{
    class Program
    {
        static void Main(string[] args)
        {
            Console.WriteLine("Enter the Number!");
            int num = Convert.ToInt32(Console.ReadLine());
            if( num % 2 == 0)
            {
                Console.WriteLine("it is Even Number.");
            }
            else
            {
                Console.WriteLine("it is odd number");
                Console.ReadLine();
            }
        }
    }
}
